  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "name": "http://localhost:3000/",
      "request": "launch",
      "url": "http://localhost:3000/login"
    },
    {
      "name": "Next.js: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "cd client && npm run dev",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ]
}